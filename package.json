{
  "name": "vite_react_shadcn_ts",
  "private": true,
  "version": "1.2.1",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8080",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "check-all": "npm run type-check && npm run lint",
    "preview": "vite preview",
    "version:patch": "npm version patch && git push origin main && git push origin --tags",
    "version:minor": "npm version minor && git push origin main && git push origin --tags",
    "version:major": "npm version major && git push origin main && git push origin --tags",
    "deploy:vps": "./scripts/deploy-vps.sh",
    "docker:build": "docker build -t sl-portfolio:latest .",
    "docker:build-dev": "docker build -f Dockerfile.dev -t sl-portfolio:dev .",
    "docker:dev": "docker-compose up -d",
    "docker:dev-stop": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod-stop": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker logs sl-portfolio-prod",
    "docker:logs-dev": "docker logs sl-portfolio-dev"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.13.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.10"
  }
}
